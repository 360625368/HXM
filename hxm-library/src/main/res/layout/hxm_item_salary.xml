<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:padding="@dimen/hxm_padding_min"
    android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/rect"
        android:layout_width="15dp"
        android:background="#B995C3"
        android:layout_height="15dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_marginLeft="@dimen/hxm_margin_min"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="@color/hxm_black"
        android:textSize="@dimen/hxm_text_size_min"
        android:text="月绩效奖金基数(元):"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/value"
        android:minEms="5"
        android:textColor="@color/hxm_black"
        android:textSize="@dimen/hxm_text_size_min"
        android:layout_width="wrap_content"
        android:text="1000.00"
        android:layout_height="wrap_content" />

</LinearLayout>