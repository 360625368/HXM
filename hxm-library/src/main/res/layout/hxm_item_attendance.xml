<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/hxm_padding_normal"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <me.grantland.widget.AutofitTextView
        android:gravity="center_vertical"
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_weight="4"
        tools:text="正常打卡"
        android:singleLine="true"
        android:textSize="@dimen/hxm_text_size_small"
        android:layout_height="wrap_content" />

    <!--<ProgressBar-->
        <!--android:id="@+id/pb"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_weight="3"-->
        <!--android:progress="50"-->
        <!--style="?android:attr/progressBarStyleHorizontal"-->
        <!--android:layout_height="wrap_content" />-->
    <huaxiaomi.pulan.com.widget.RectHorizontalProgressBar
        android:id="@+id/rhpb"
        android:layout_marginLeft="@dimen/hxm_margin_normal"
        android:layout_width="0dp"
        android:layout_weight="5"
        tools:RectHorizontalProgressBar_Progress="30"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/desc"
        android:minEms="3"
        android:maxEms="3"
        android:gravity="left"
        android:layout_marginLeft="@dimen/hxm_margin_normal"
        android:layout_width="wrap_content"
        android:textSize="@dimen/hxm_text_size_small"
        tools:text="126.98"
        android:layout_height="wrap_content" />

</LinearLayout>