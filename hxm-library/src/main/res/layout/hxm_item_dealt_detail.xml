<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:textColor="@color/hxm_black"
            android:textSize="@dimen/hxm_text_size_small"
            tools:text="张三"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            tools:text="2018.09.05 11:30"
            android:textSize="@dimen/hxm_text_size_min"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_marginLeft="@dimen/hxm_margin_normal"
        android:layout_marginRight="@dimen/hxm_margin_normal"
        android:layout_marginTop="2dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/hxm_divide_color"/>
        
        <ImageView
            android:id="@+id/circle"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:background="@mipmap/hxm_submission"/>
        
        <View
            android:id="@+id/line"
            android:layout_marginTop="2dp"
            android:layout_width="1dp"
            android:minHeight="25dp"
            android:layout_height="match_parent"
            android:background="@color/hxm_divide_color"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="left"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/action"
                android:layout_width="wrap_content"
                android:textColor="@color/hxm_colorPrimary"
                android:textSize="@dimen/hxm_text_size_small"
                tools:text="提交"
                android:layout_height="wrap_content" />

            <me.grantland.widget.AutofitTextView
                android:singleLine="true"
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                tools:text="来自PC"
                android:textSize="@dimen/hxm_text_size_min"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_weight="1"
            tools:text="提交"
            android:textSize="@dimen/hxm_text_size_small"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>